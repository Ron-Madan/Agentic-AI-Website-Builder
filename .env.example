# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DB_URL=sqlite:///./agentic_web_app_builder.db
DB_ECHO=false
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_DECODE_RESPONSES=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_SECRET_KEY=your-secret-key-change-in-production
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# LLM Configuration
LLM_OPENAI_API_KEY=your-openai-api-key
LLM_ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_DEFAULT_MODEL=gpt-4
LLM_MAX_TOKENS=4000
LLM_TEMPERATURE=0.7

# Deployment Configuration
DEPLOY_NETLIFY_ACCESS_TOKEN=your-netlify-token
DEPLOY_VERCEL_ACCESS_TOKEN=your-vercel-token
DEPLOY_DEFAULT_PLATFORM=netlify

# Monitoring Configuration
MONITOR_SENTRY_DSN=your-sentry-dsn
MONITOR_SLACK_WEBHOOK_URL=your-slack-webhook
MONITOR_EMAIL_SMTP_SERVER=smtp.gmail.com
MONITOR_EMAIL_SMTP_PORT=587
MONITOR_EMAIL_USERNAME=your-email@example.com
MONITOR_EMAIL_PASSWORD=your-email-password

# Agent Configuration
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_MINUTES=30
CHECKPOINT_INTERVAL_MINUTES=10